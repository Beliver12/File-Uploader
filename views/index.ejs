<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>

    <% if (locals.user) {%>
        <div class="navbar">
            <h1>File Uploader app</h1>
            <div class="links">
                <h3>
                    <a href="/createFolder">Create Folder</a>
                </h3>
                <h2>
                    <%= user.username %>
                </h2>
                <h3>
                    <a href="/log-out">LOG OUT</a>
                </h3>
            </div>
        </div>



        <ul class="home-content">
            <% if (locals.folder) {%>
                <% for (let i=0; i < folder.length; i++) { %>

                    <li>
                        <a href="/folders/<%= folder[i].id %>">

                            <%= folder[i].folderName %>

                        </a>

                        <div>
                            <a href="/update/<%= folder[i].id %>">
                                <button>Update</button>
                            </a>
                            <form id="delete" action="/delete/<%= folder[i].id %> " method="POST"
                                style="display:inline;">
                                <button type="submit"
                                    onclick="return confirm('Are you sure you want to delete this folder? you will lose all files inside that folder.' )">Delete</button>
                            </form>
                        </div>

                    </li>
                    <%}%>

        </ul>
        <% }%>

            <%} else { %>

                <div class="navbar">
                    <h1>please log in</h1>
                    <a href="/sign-up">Sign-up</a>
                </div>
                <%- include("errors.ejs") %>
                    <% if (locals.messages) {%>
                        <p>
                            <%= messages[0] %>
                        </p>
                        <%}%>
                            <form class="sign-up" action="/log-in" method="POST">
                                <label for="username">Username</label>
                                <input id="username" name="username" placeholder="username" type="text" />
                                <label for="password">Password</label>
                                <input id="password" name="password" type="password" />
                                <button>Log In</button>
                            </form>
                            <% }%>
</body>

</html>